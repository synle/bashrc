[user]
name = Sy Le
; email = test_email@gmail.com

[core]
autocrlf = input
editor = vim
excludesFile = ~/.gitignore_global
fsmonitor = true # Uses a background daemon to monitor file changes. Massive boost for 'git status' in large repos.
untrackedCache = true # Speeds up index updates by caching untracked files.
commitGraph = true # Speed Up Logs and History
preloadIndex = true # Uses multiple threads to scan for changed files.

[feature]
manyFiles = true # Enables several performance-related features at once, including a faster index format (version 4).

[checkout]
workers = 0 # Uses multiple workers for checking out files (0 = auto-detect CPU cores).

[fetch]
writeCommitGraph = true # Automatically updates the commit graph cache whenever you fetch.

[pull]
rebase = false

[push]
default = current

[diff]
tool = vimdiff
prompt = false

[merge]
tool = vimdiff
prompt = false

[color]
ui = true

[color "diff-highlight"]
oldNormal = red bold
oldHighlight = red bold 52
newNormal = green bold
newHighlight = green bold 22

[color "diff"]
meta = yellow
commit = green
frag = cyan
old = red
new = green
whitespace = red reverse

[diff-so-fancy]
markEmptyLines = false

[alias]
# General
s   = status -sb
a   = add
aa  = add -A
ap  = add -p
au  = add -u
c   = commit --allow-empty
cm  = commit -m
amend = commit --amend
ca  = amend
can = amend --no-verify

# Branch & Checkout
co  = checkout
cob = checkout -b
b   = branch -vv
ba  = branch -a -vv
del = branch -D

# Pull / Push / Fetch
f   = fetch --all --prune
pl  = pull
ps  = push
psf = push --force
po  = push origin
pof = push origin --force

# Rebase & Merge
r   = rebase --reapply-cherry-picks
ri  = rebase -i
ri10 = rebase -i HEAD~10
mc  = merge --continue

# Log & Diff
l    = log --oneline
ls   = log --oneline --decorate
d    = diff --word-diff -w
stats = shortlog -sn

# Maintenance & Advanced
cleanfd = clean -f -d
cp      = cherry-pick
cpn     = cherry-pick -n
clone1  = clone --depth 1

# Search & Reflog
search-logs   = log -- . -G
search-reflog = rev-list --all --
where-is      = branch -r --contains
